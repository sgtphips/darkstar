<div class="container">
 <p id="notice"><%= notice %></p>

 <h1>Donations</h1>

 <table class="table table-striped table-inverse">
   <thead>
     <tr>
       <th scope="row">Title</th>
       <th scope="row">Bitcoin wallet address</th>
       <th scope="row">Body</th>
       <th colspan="4"></th>
     </tr>
   </thead>

   <tbody>
     <% @donations.each do |donation| %>
       <tr>
         <td><%= donation.title %></td>
         <td><%= donation.bitcoin_wallet_address %></td>
         <td><%= donation.body %></td>
         <% if user_signed_in? %>
         <td><%= link_to 'Show', donation %></td>
         <td><%= link_to 'Edit', edit_donation_path(donation) %></td>
         <td><%= link_to 'Destroy', donation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <td><%= link_to 'New Donation', new_donation_path %></td>
         <% end %>
       </tr>
     <% end %>
   </tbody>
 </table> 
</div>

